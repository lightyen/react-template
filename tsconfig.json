{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable", "webworker"],
    "types": ["vite/types/importMeta.d.ts", "babel-plugin-twobj/types/emotion"],
    "jsx": "preserve",
    "noImplicitAny": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"],
      "@context": ["./src/context"],
      "@context/*": ["./src/context/*"],
      "@concepts/*": ["./src/concepts/*"],
      "shadcn/*": ["./shadcn/*"]
    }
  },
  "include": [
    "tailwind.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "playwright.config.ts",
    ".storybook/**/*",
    "./src/**/*",
    "./tests/**/*",
    "./tests-examples/**/*",
    "./shadcn/**/*"
  ]
}
