{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable", "webworker"],
    "types": ["vite/types/importMeta.d.ts", "babel-plugin-twobj/types/emotion"],
    "jsx": "preserve",
    "noImplicitAny": false,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"],
      "@context": ["./src/context"],
      "@context/*": ["./src/context/*"],
      "@components/*": ["./src/components/*"],
      "@concepts/*": ["./src/concepts/*"],
      "shadcn/*": ["./shadcn/*"]
    }
  },
  "include": ["eslint.config.js", "tailwind.config.ts", "vite.config.ts", "./src/**/*", "./shadcn/**/*"]
}
